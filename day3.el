;; part 1

(defun move-up (coord)
  (pcase coord
    (`(,x ,y) `(,x ,(1+ y)))))

(defun move-down (coord)
  (pcase coord
    (`(,x ,y) `(,x ,(1- y)))))

(defun move-left (coord)
  (pcase coord
    (`(,x ,y) `(,(1+ x) ,y))))

(defun move-right (coord)
  (pcase coord
    (`(,x ,y) `(,(1- x) ,y))))

(defun determine-move (char-move)
  (cond
   ((eq char-move ?^) #'move-up)
   ((eq char-move ?v) #'move-down)
   ((eq char-move ?<) #'move-left)
   ((eq char-move ?>) #'move-right)))

(defun generate-coord-stream (moves)
  (let ((coords '((0 0))))
    (dotimes (i (length moves) coords)
      (push (funcall (determine-move
                      (aref moves i))
                     (car coords))
            coords))))

(defun day3-part-1 (input)
  (interactive "sInput: ")
  (let ((all-positions (generate-coord-stream input)))
    (message "%s"
             (length (seq-uniq all-positions)))))

(day3-part-1 "^>v<")

;; part 2

(defun split-instruction-streams (interleaved-instructions)
  (let ((stream-1 "")
        (stream-2 ""))
    (dotimes (i (length interleaved-instructions)
                `(,stream-1 ,stream-2))
      (if (= (mod i 2) 0)
          (setq stream-1 (concat stream-1 (char-to-string
                                           (aref interleaved-instructions
                                                 i))))
        (setq stream-2 (concat stream-2 (char-to-string
                                         (aref interleaved-instructions
                                               i))))))))

(defun day3-part-2 (input)
  (interactive "sInput: ")
  (let* ((streams  (split-instruction-streams input))
         (coords-1 (generate-coord-stream (car streams)))
         (coords-2 (generate-coord-stream (cadr streams))))
    (message "%s"
             (length (seq-uniq (seq-concatenate 'list coords-1 coords-2))))))

(day3-part-2 "^>v<")

